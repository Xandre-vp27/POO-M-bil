<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una Liga"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <ImageView
            android:id="@+id/iv_nba"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/nba"
            android:contentDescription="Logo NBA"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/iv_mlb"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mlb"
            android:contentDescription="Logo MLB"
            android:layout_marginBottom="16dp"/>
        <ImageView
            android:id="@+id/iv_mls"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mls"
            android:contentDescription="Logo MLS"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/iv_nfl"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/nfl"
            android:contentDescription="Logo NFL"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/iv_nhl"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/nhl"
            android:contentDescription="Logo NHL"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>