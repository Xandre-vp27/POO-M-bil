<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/ivDetalleEscudo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvDetalleNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Equipo"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvDetalleEstadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estadio: Cargando..."
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvDetalleTitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ­tulos: Cargando..."
        android:textSize="18sp"/>

</LinearLayout>