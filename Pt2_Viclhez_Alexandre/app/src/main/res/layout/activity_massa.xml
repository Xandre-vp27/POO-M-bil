<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryContainer"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@color/primaryContainer"
                android:contentDescription="Volver"
                android:text="←Atrás"
                android:textColor="@color/onPrimary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tituloMassa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Conversor de Massa"
                android:textColor="@color/onPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/inputMassa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce el valor"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/onPrimary"
            android:textColorHint="@color/onPrimary"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <RadioGroup
            android:id="@+id/groupConversionMassa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbKgLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kg → lb"
                android:textColor="@color/onPrimary"/>

            <RadioButton
                android:id="@+id/rbLbKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lb → Kg"
                android:textColor="@color/onPrimary"/>

            <RadioButton
                android:id="@+id/rbKgOz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kg → oz"
                android:textColor="@color/onPrimary"/>

            <RadioButton
                android:id="@+id/rbOzKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oz → Kg"
                android:textColor="@color/onPrimary"/>

            <RadioButton
                android:id="@+id/rbKgSt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kg → st"
                android:textColor="@color/onPrimary"/>

            <RadioButton
                android:id="@+id/rbStKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="st → Kg"
                android:textColor="@color/onPrimary"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnConvertirMassa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convertir"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/onSecondary"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/txtResultadoMassa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado: "
            android:textSize="20sp"
            android:textColor="@color/onPrimary"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
